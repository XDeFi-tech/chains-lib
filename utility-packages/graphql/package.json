{
  "name": "@xdefi-tech/chains-graphql",
  "version": "1.2.13",
  "license": "MIT",
  "repository": "https://github.com/XDeFi-tech/chains/",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "build": "tsup --minify --clean",
    "publish:packages": "npm publish --tag $GITHUB_REF",
    "watch": "tsup --watch",
    "compile": "graphql-codegen --config codegen.yml && yarn format",
    "compile:build": "yarn compile && yarn build",
    "compile:watch": "graphql-codegen -w",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "dependencies": {
    "@graphql-codegen/cli": "3.2.2",
    "@graphql-codegen/client-preset": "2.1.1",
    "@graphql-codegen/named-operations-object": "2.3.1",
    "@graphql-codegen/near-operation-file-preset": "2.5.0",
    "@graphql-codegen/typescript-document-nodes": "3.0.2",
    "@xdefi-tech/chains-core": "*",
    "graphql": "16.6.0",
    "prettier": "2.5.1",
    "typescript": "4.8.3"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts",
      "!src/**/*.spec.*"
    ],
    "outDir": "dist",
    "format": "cjs",
    "splitting": false,
    "dts": true,
    "types": [
      "./dist/index.d.ts"
    ],
    "platform": "browser",
    "target": "es2015"
  }
}