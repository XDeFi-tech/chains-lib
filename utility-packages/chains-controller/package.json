{
  "name": "@ctrl-tech/chains-controller",
  "version": "2.0.5",
  "license": "MIT",
  "repository": "https://github.com/XDeFi-tech/chains/",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "CHANGELOG.md",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup --minify --clean",
    "coverage": "jest --coverageReporters='json-summary' --coverage",
    "test": "jest",
    "test:watch": "jest --watch",
    "publish:packages": "npm publish --tag $GITHUB_REF",
    "watch": "tsup --watch",
    "clean": "rimraf dist .turbo node_modules"
  },
  "devDependencies": {
    "jest": "27.5.1",
    "jest-environment-jsdom": "27.5.1",
    "jest-watch-typeahead": "1.0.0",
    "ts-jest": "27.1.4",
    "eslint-config-custom": "*",
    "prettier": "2.5.1",
    "typescript": "4.8.3"
  },
  "dependencies": {
    "@ctrl-tech/chains-binance": "*",
    "@ctrl-tech/chains-bitcoin": "*",
    "@ctrl-tech/chains-bitcoincash": "*",
    "@ctrl-tech/chains-dogecoin": "*",
    "@ctrl-tech/chains-litecoin": "*",
    "@ctrl-tech/chains-core": "*",
    "@ctrl-tech/chains-evm": "*",
    "@ctrl-tech/chains-thor": "*",
    "@ctrl-tech/chains-solana": "*",
    "@ctrl-tech/chains-cosmos": "*",
    "@ctrl-tech/chains-graphql": "*",
    "rimraf": "4.4.0"
  },
  "type": "commonjs",
  "tsup": {
    "entry": [
      "src",
      "!src/**/*.spec.*"
    ],
    "outDir": "dist",
    "format": "cjs",
    "splitting": false,
    "dts": true,
    "types": [
      "./dist/index.d.ts"
    ],
    "platform": "browser",
    "target": "ES6",
    "external": [
      "@ctrl-tech/chains-cosmos",
      "@ctrl-tech/chains-btc"
    ]
  },
  "jest": {
    "setupFiles": [
      "./jest-setup-file.ts"
    ],
    "preset": "ts-jest",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "moduleNameMapper": {
      "axios": "axios/dist/node/axios.cjs"
    },
    "testEnvironment": "jsdom",
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "testTimeout": 15000
  }
}
