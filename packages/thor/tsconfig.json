{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "crypto": [
        "node_modules/crypto-browserify",
        "../../node_modules/crypto-browserify"
      ],
      "stream": [
        "node_modules/stream-browserify",
        "../../node_modules/stream-browserify"
      ]
    }
  },
  "allowJs": true,
  "include": ["!./src/custom.d.ts", "./src/**/*.ts", "!src/**/*.spec.*", "./src/proto"]
}
