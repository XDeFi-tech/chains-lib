{
  "name": "@xdefi-tech/chains-solana",
  "version": "2.1.34",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/XDeFi-tech/chains/",
  "license": "MIT",
  "files": [
    "dist",
    "CHANGELOG.md",
    "README.md"
  ],
  "devDependencies": {
    "@graphql-codegen/cli": "3.2.2",
    "@graphql-codegen/client-preset": "2.1.1",
    "@graphql-codegen/named-operations-object": "2.3.1",
    "@graphql-codegen/near-operation-file-preset": "2.5.0",
    "@graphql-codegen/typescript-document-nodes": "3.0.2",
    "eslint-config-custom": "*",
    "graphql": "16.6.0",
    "jest": "27.5.1",
    "jest-environment-jsdom": "27.5.1",
    "jest-watch-typeahead": "1.0.0",
    "ts-jest": "27.1.4",
    "tsup": "6.6.3",
    "typescript": "4.8.3",
    "xhr2": "0.2.1"
  },
  "dependencies": {
    "@ledgerhq/hw-app-solana": "7.1.3",
    "@ledgerhq/hw-transport": "6.30.3",
    "@ledgerhq/hw-transport-webhid": "6.28.3",
    "@metaplex-foundation/mpl-token-metadata": "2.13.0",
    "@scure/bip32": "^1.4.0",
    "@scure/bip39": "^1.3.0",
    "@solana-developers/helpers": "2.4.0",
    "@solana/spl-token": "0.4.6",
    "@solana/web3.js": "1.91.8",
    "@trezor/connect-web": "9.4.1",
    "@xdefi-tech/chains-core": "*",
    "axios": "1.3.4",
    "bignumber.js": "9.1.2",
    "bs58": "5.0.0",
    "ed25519-hd-key": "1.3.0",
    "eslint-config-custom": "*",
    "graphql-tag": "2.12.6",
    "lodash": "4.17.21",
    "reflect-metadata": "0.1.13",
    "rimraf": "4.4.0",
    "rxjs": "7.8.0",
    "ts-node": "10.7.0",
    "tweetnacl": "1.0.3"
  },
  "scripts": {
    "build": "tsup --minify --clean",
    "publish:packages": "npm publish --tag $GITHUB_REF",
    "watch": "tsup --watch",
    "clean": "rimraf dist .turbo node_modules",
    "lint": "eslint .",
    "coverage": "jest --coverageReporters='json-summary' --coverage",
    "test": "jest",
    "lint:fix": "eslint . --fix",
    "test:watch": "jest --watch",
    "compile": "graphql-codegen --config codegen.yml && yarn format",
    "compile:build": "yarn compile && yarn build",
    "compile:watch": "graphql-codegen -w",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test:cicd": "jest src/coverage-test.spec.ts"
  },
  "type": "commonjs",
  "tsup": {
    "entry": [
      "src/signers/web.ts",
      "src/signers/react-native.ts",
      "src/index.ts"
    ],
    "format": "cjs",
    "splitting": false,
    "dts": true,
    "shims": false,
    "types": [
      "./dist/signers/web.d.ts",
      "./dist/signers/react-native.d.ts",
      "./dist/index.d.ts"
    ],
    "clean": true,
    "treeshake": true,
    "platform": "browser",
    "target": "ES6",
    "external": [
      "*"
    ]
  },
  "esbuildOptions": {
    "minifyWhitespace": true,
    "minifyIdentifiers": true,
    "minifySyntax": true
  },
  "jest": {
    "setupFiles": [
      "./jest-setup-file.ts",
      "dotenv/config"
    ],
    "clearMocks": true,
    "preset": "ts-jest",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "moduleNameMapper": {
      "axios": "axios/dist/node/axios.cjs"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "testTimeout": 15000,
    "transformIgnorePatterns": [
      "/node_modules/(?!@solana-developers/helpers)"
    ]
  }
}
