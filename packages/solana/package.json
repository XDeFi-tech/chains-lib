{
  "name": "@xdefi-tech/chains-solana",
  "version": "2.0.13",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/XDeFi-tech/chains/",
  "license": "MIT",
  "files": [
    "dist",
    "CHANGELOG.md",
    "README.md"
  ],
  "devDependencies": {
    "eslint-config-custom": "*",
    "jest": "27.5.1",
    "jest-environment-jsdom": "27.5.1",
    "jest-watch-typeahead": "1.0.0",
    "ts-jest": "27.1.4",
    "tsup": "6.6.3",
    "typescript": "4.8.3"
  },
  "dependencies": {
    "@ledgerhq/hw-app-solana": "7.1.3",
    "@ledgerhq/hw-transport": "6.30.3",
    "@ledgerhq/hw-transport-webhid": "6.28.3",
    "@metaplex-foundation/mpl-token-metadata": "2.13.0",
    "@solana/spl-token": "0.3.8",
    "@solana/web3.js": "1.78.5",
    "@xdefi-tech/chains-core": "*",
    "@xdefi-tech/chains-graphql": "*",
    "bignumber.js": "9.1.2",
    "bip39": "3.1.0",
    "bs58": "5.0.0",
    "ed25519-hd-key": "1.3.0",
    "eslint-config-custom": "*",
    "lodash": "4.17.21",
    "reflect-metadata": "0.1.13",
    "rimraf": "4.4.0",
    "rxjs": "7.8.0",
    "ts-node": "10.7.0"
  },
  "scripts": {
    "build": "tsup --minify --clean",
    "publish:packages": "npm publish --tag $GITHUB_REF",
    "watch": "tsup --watch",
    "clean": "rimraf dist .turbo node_modules",
    "lint": "eslint .",
    "coverage": "jest --coverageReporters='json-summary' --coverage",
    "test": "jest",
    "lint:fix": "eslint . --fix",
    "test:watch": "jest --watch"
  },
  "type": "commonjs",
  "tsup": {
    "entry": [
      "src/signers/web.ts",
      "src/signers/react-native.ts",
      "src/index.ts"
    ],
    "format": "cjs",
    "splitting": false,
    "dts": true,
    "shims": true,
    "types": [
      "./dist/signers/web.d.ts",
      "./dist/signers/react-native.d.ts",
      "./dist/index.d.ts"
    ],
    "platform": "browser",
    "target": "ES6"
  },
  "jest": {
    "setupFiles": [
      "./jest-setup-file.ts"
    ],
    "preset": "ts-jest",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "moduleNameMapper": {
      "axios": "axios/dist/node/axios.cjs"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "testTimeout": 15000
  }
}
